<div class="card mt-4">
  <div class="row no-gutters justify-content-around">
    <div class="col-md-3 mt-3">
        <a href={{concat "pharmacy" uid}}>
          <img class="card__thumbnail" src={{image-url}}>
        </a>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{business-name}}</h5>
        <img class="card__ratings" src="https://asset2.betterdoctor.com/assets/consumer/stars/stars-small-3.5.png">
        <p class="card-text">
          <strong>Address</strong> <br>
          {{street-address}} <br>
          {{city-state-address}}
        </p>

          <a id="pharmacy-id" href={{concat "pharmacy" uid}}>
            <button class="btn btn-dark">View more</button>
          </a>
      </div>
    </div>
  </div>
</div>
